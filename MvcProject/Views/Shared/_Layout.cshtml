<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        body {
            background-image: url('../../ImageHome/wDWT4O.jpg');
            font-family: Arial;
            color: #daa4be;
        }

        #hnav {
            background-image: url('../../ImageHome/nav.jpg');
            
        }
    </style>

</head>
<body>
    <div id="hnav" class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
           
                @Html.ActionLink("AR Creative", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">


                    <li>@Html.ActionLink("Home", "Index", "Home")</li>



                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="dropdown">
                            <a class=" dropdown-toggle" data-toggle="dropdown">
                                Employee
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Employee", "Index", "Employees")</li>
                                <li>@Html.ActionLink("Employee List", "Index", "Details")</li>


                            </ul>
                        </li>

                        <li class="dropdown">
                            <a class=" dropdown-toggle" data-toggle="dropdown">
                                Institute
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Institute", "Index", "Institutes", new { }, null)</li>
                                <li>@Html.ActionLink("Insert Multi_Row", "DataInsert", "Institutes", new { }, null)</li>


                            </ul>
                        </li>
                        <li> @Html.ActionLink("Register", "Register", "Account")</li>

                        if (User.Identity.Name == "admin@gmail.com")
                        {
                            <li class="dropdown">
                                <a class=" dropdown-toggle" data-toggle="dropdown">
                                    Admin
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Create Role", "Index", "AdminRole")</li>
                                    <li>@Html.ActionLink("User List", "UserList", "AdminRole")</li>
                                    <li>@Html.ActionLink("Delete User", "UserDelete", "AdminRole", new { id = "" }, null)</li>

                                </ul>
                            </li>

                            
                        }



                    }
                    else
                    {
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                    }

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - AR Group of Companies Ltd.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
